<%- include('partials/header') %>

<% if (chapter && chapter.images && chapter.images.length > 0) { %>
<!-- Chapter Navigation -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-4 mb-6 border border-gray-200 dark:border-gray-700 sticky top-16 z-40">
    <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
        <h1 class="text-lg font-semibold"><%= chapter.title %></h1>
        
        <div class="flex gap-2">
            <% if (chapter.navigation.prev) { %>
            <a href="/chapter?url=<%= encodeURIComponent(chapter.navigation.prev) %>" 
               class="px-4 py-2 bg-gray-200 dark:bg-gray-700 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition flex items-center">
                <i class="fa-solid fa-chevron-left mr-2"></i>
                Sebelumnya
            </a>
            <% } %>
            
            <% if (chapter.navigation.next) { %>
            <a href="/chapter?url=<%= encodeURIComponent(chapter.navigation.next) %>" 
               class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition flex items-center">
                Selanjutnya
                <i class="fa-solid fa-chevron-right ml-2"></i>
            </a>
            <% } %>
        </div>
    </div>
</div>

<!-- Chapter Images -->
<div class="space-y-4">
    <% chapter.images.forEach(image => { %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden border border-gray-200 dark:border-gray-700">
        <div class="p-2 bg-gray-50 dark:bg-gray-700/50 border-b border-gray-200 dark:border-gray-600">
            <span class="text-sm text-gray-500 dark:text-gray-400">
                Halaman <%= image.page %> / <%= chapter.images.length %>
            </span>
        </div>
        <div class="flex justify-center">
            <img src="<%= image.url %>" 
                 alt="<%= chapter.title %> - Halaman <%= image.page %>"
                 class="max-w-full h-auto"
                 loading="lazy">
        </div>
    </div>
    <% }) %>
</div>

<!-- Bottom Navigation -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-4 mt-6 border border-gray-200 dark:border-gray-700 sticky bottom-4">
    <div class="flex justify-center gap-4">
        <% if (chapter.navigation.prev) { %>
        <a href="/chapter?url=<%= encodeURIComponent(chapter.navigation.prev) %>" 
           class="px-6 py-3 bg-gray-200 dark:bg-gray-700 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition flex items-center">
            <i class="fa-solid fa-chevron-left mr-2"></i>
            Chapter Sebelumnya
        </a>
        <% } %>
        
        <% if (chapter.navigation.next) { %>
        <a href="/chapter?url=<%= encodeURIComponent(chapter.navigation.next) %>" 
           class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition flex items-center">
            Chapter Selanjutnya
            <i class="fa-solid fa-chevron-right ml-2"></i>
        </a>
        <% } %>
    </div>
</div>

<% } else { %>
<div class="bg-yellow-100 dark:bg-yellow-900/30 border border-yellow-400 dark:border-yellow-800 text-yellow-700 dark:text-yellow-400 px-4 py-3 rounded-lg">
    <i class="fa-solid fa-exclamation-triangle mr-2"></i>
    <%= error || 'Chapter tidak ditemukan' %>
</div>
<% } %>

<%- include('partials/footer') %>